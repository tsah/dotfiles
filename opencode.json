{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp"
    }
  },
  "tools": {
    "linear_*": false
  },
  "keybinds": {
    "input_paste": "ctrl+v,ctrl+shift+v,shift+insert"
  },
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "color": "#9B59B6"
    },
    "build": {
      "disable": true
    },
    "opus": {
      "description": "Build agent using Claude Opus",
      "mode": "primary",
      "model": "anthropic/claude-opus-4-6",
      "color": "#3498DB"
    },
    "codex": {
      "description": "Build agent using GPT-5 Codex via Zen",
      "mode": "primary",
      "model": "opencode/gpt-5.3-codex",
      "color": "#F1C40F"
    },
    "oss": {
      "description": "Build agent using Kimi K2.5 via Zen",
      "mode": "primary",
      "model": "opencode/kimi-k2.5",
      "color": "#FFFFFF"
    },
    "fast": {
      "description": "Fast build agent using Claude Haiku",
      "mode": "primary",
      "model": "anthropic/claude-haiku-4-5",
      "color": "#2ECC71"
    },
    "free": {
      "mode": "primary",
      "model": "opencode/big-pickle"
    },
    "linear-agent": {
      "description": "Manages Linear issues, projects, and workflow tasks",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-5",
      "tools": {
        "linear_*": true
      }
    }
  }
}
