{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp"
    }
  },
  "tools": {
    "linear_*": false
  },
  "provider": {
    "openai": {
      "models": {
        "gpt-5-codex": {
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "auto"
          }
        }
      }
    }
  },
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5-20251101"
    },
    "build": {
      "model": "anthropic/claude-opus-4-5-20251101"
    },
    "build-free": {
      "model": "opencode/grok-code"
    },
    "linear-agent": {
      "description": "Manages Linear issues, projects, and workflow tasks",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-5",
      "tools": {
        "linear_*": true
      }
    }
  }
}
