# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH=~/.oh-my-zsh

# Set name of the theme to load. Optionally, if you set this to "random"
# it'll load a random theme each time that oh-my-zsh is loaded.
# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME="tsah"

# Uncomment the following line to use case-sensitive completion.
# CASE_SENSITIVE="true"

# Uncomment the following line to use hyphen-insensitive completion. Case
# sensitive completion must be off. _ and - will be interchangeable.
# HYPHEN_INSENSITIVE="true"

# Uncomment the following line to disable bi-weekly auto-update checks.
# DISABLE_AUTO_UPDATE="true"

# Uncomment the following line to change how often to auto-update (in days).
# export UPDATE_ZSH_DAYS=13

# Uncomment the following line to disable colors in ls.
# DISABLE_LS_COLORS="true"

# Uncomment the following line to disable auto-setting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
# COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
# HIST_STAMPS="mm/dd/yyyy"

# Would you like to use another custom folder than $ZSH/custom?
# ZSH_CUSTOM=/path/to/new-custom-folder

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# User configuration

# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8

# Preferred editor for local and remote sessions
# if [[ -n $SSH_CONNECTION ]]; then
#   export EDITOR='vim'
# else
#   export EDITOR='mvim'
# fi

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# ssh
export SSH_KEY_PATH="~/.ssh/rsa_id"

# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Useful environment vars
export DTC_TSAH_IP="10.235.44.71"
export DTC_NIR_IP="10.235.44.67"
export DTC_MICHAL_IP="10.235.44.73"
export DTC_ILIA_IP="10.235.44.70"
export DTC_NELLY_IP="10.235.44.65"
export DTC_NAZARII_IP="10.235.44.79"

# Useful linux/mac aliases
alias atomzshrc="atom ~/.zshrc"
alias vimzshrc="vim ~/.zshrc"
alias local-tsah="ssh root@wsd1tsah"
alias local-savva="ssh root@wsd1savva"
alias local-elena="ssh root@wsd1elena"
alias dtc-tsah="ssh -t clfadmin@${DTC_TSAH_IP} 'sudo -i'"
alias dtc-nir="ssh -t clfadmin@${DTC_NIR_IP} 'sudo -i'"
alias dtc-michal="ssh -t clfadmin@${DTC_MICHAL_IP} 'sudo -i'"
alias dtc-ilia="ssh -t clfadmin@${DTC_ILIA_IP} 'sudo -i'"
alias dtc-nelly="ssh -t clfadmin@${DTC_NELLY_IP} 'sudo -i'"
alias dtc-nelly="ssh -t clfadmin@${DTC_NAZARII_IP} 'sudo -i'"
alias maketar="tar zcvf"
alias untar="tar xvf"
alias cmwell='/Users/tsah/dev/git/CM-Well/server/cmwell-cons/app/cmwell.sh'
alias reload_zsh="source ~/.zshrc"
alias docker_run_elasticsearch="docker run -p 9200:9200 -p 9300:9300 -e "discovery.type=single-node" docker.elastic.co/elasticsearch/elasticsearch:6.1.1"
alias bigfiles="du -a / | sort -n -r | head -n "
alias rmall="rm -rf *"
alias tailf="tail -f"
alias gjava="ps -ef | grep java"
alias kjava="pkill -9 java"
alias update_zsh="~/dev/git/tsah-config/install-macos.bash && reload_zsh"

# Java, Scala, Maven, SBT configuration
export BIN_HOME=/Users/$USER/dev/bin
export SBT_HOME=$BIN_HOME/sbt
export SCALA_HOME=$BIN_HOME/scala
export MAVEN_HOME=$BIN_HOME/maven
export JAVA_HOME=$BIN_HOME/java
export SCRIPTS_HOME=$BIN_HOME/scripts
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$BIN_HOME:$SBT_HOME/bin:$SCALA_HOME/bin:$MAVEN_HOME/bin:$JAVA_HOME:$SCRIPTS_HOME"


# control components versions
alias java7="sdk use java 7.0.181-zulu"
alias java8="sdk use java 8.0.181-zulu"
alias java10="sdk use java 10.0.2-open"
alias java11="sdk use java 11.0.0-open"
alias java12="sdk use java 12.0.1-open"

alias maven2="rm $BIN_HOME/maven; ln -s $BIN_HOME/apache-maven-2.2.1 $BIN_HOME/maven"
alias maven3="rm $BIN_HOME/maven; ln -s $BIN_HOME/apache-maven-3.5.2 $BIN_HOME/maven"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/tsah/dev/bin/gcloud/google-cloud-sdk/path.zsh.inc' ]; then source '/Users/tsah/dev/bin/gcloud/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/tsah/dev/bin/gcloud/google-cloud-sdk/completion.zsh.inc' ]; then source '/Users/tsah/dev/bin/gcloud/google-cloud-sdk/completion.zsh.inc'; fi

# syntax highlighting for less. must run `brew install source-highlight` before
LESSPIPE=`which src-hilite-lesspipe.sh`
export LESSOPEN="| ${LESSPIPE} %s"
export LESS='-R'

# intellij
export INTELLIJ_HOME=/Applications/IntelliJ\ IDEA\ CE.app/Contents/MacOS
export PATH=$PATH:$INTELLIJ_HOME

# plugin
source ~/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
# sdkman
source "$HOME/.sdkman/bin/sdkman-init.sh"
