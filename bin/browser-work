#!/bin/bash
# Launch or focus default Chrome browser (work profile)

WINDOW_CLASS="chromium"

# Check if default chromium window already exists
if hyprctl clients | grep -q "class: ${WINDOW_CLASS}"; then
    # Focus existing window
    hyprctl dispatch focuswindow "class:${WINDOW_CLASS}"
else
    # Launch default chromium instance
    exec uwsm app -- chromium "$@"
fi